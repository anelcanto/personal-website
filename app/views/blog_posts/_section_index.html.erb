<%= comment do %>
  <!-- Card Blog -->
  <div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-4 lg:py-14 mx-auto">
    <!-- Title -->
    <div class="max-w-2xl mb-10">
      <h2 class="text-2xl font-bold md:text-4xl md:leading-tight dark:text-white">Recent articles</h2>
      <p class="mt-1 text-gray-600 dark:text-gray-400">See how game-changing companies are making the most of every engagement with Preline.</p>
    </div>
    <!-- End Title -->
    <!-- Grid -->
    <div class= "grid sm:grid-cols-2 sm:gap-8 lg:gap-3 lg:grid-cols-3 lg:auto-rows-auto">
      <% blog_posts.each do |blog_post| %>
        <%= render "blog_posts/section_card", blog_post: blog_post %>
      <% end %>
    </div>
    <!-- End Grid -->
  </div>
  <!-- End Card Blog -->
<% end %>
