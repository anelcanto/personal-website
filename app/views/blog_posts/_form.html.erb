<div class="border border-gray-200 rounded-lg overflow-hidden dark:border-gray-700 mx-7">
  <%= form_with(model: blog_post) do |form| %>
    <% if blog_post.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(blog_post.errors.count, "error") %> prohibited this blog_post from being saved:</h2>
        <ul>
          <% blog_post.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div>
      <%= form.label :title, style: "display: block" %>
      <%= form.text_field :title %>
    </div>
    <div>
      <%= form.label :image, style:"display: block" %>
      <%= form.file_field(:image, accept: 'image/png,image/gif,image/jpeg') %>
    </div>
    <div>
      <%= form.label :content, style: "display: block" %>
      <%= form.rich_text_area :content %>
    </div>
    <div>
      <%= form.label :published_at, style: "display: block" %>
      <%= form.datetime_select :published_at, include_blank: true, selected: Time.now + (5 * 60)%>
    </div>
    <div>
      <%= form.submit %>
    </div>
  <% end %>
</div>
